<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tk="using:ArcsUI.Controls">
    
    <Design.PreviewWith>
        <tk:ActionCardControl />
    </Design.PreviewWith>

    <Style Selector="tk|ActionCardControl">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel>
                <TextBlock Text="Templated Control" Background="Green" />
                <TextBlock Text="Bottom Half" Background="Orange" />
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
